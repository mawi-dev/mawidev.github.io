---
interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const websites: Project[] = [{
    name: 'Gutachter f端r Dachdecker',
    description: 'Webseite f端r einen Gutachter f端r das Dachdeckerhandwerk in OWL',
    link: {
        url: 'https://gutachter-pb.de/',
    }
}];

const projects: Project[] = [{
    name: 'SILO',
    description: 'Software zur Inventarisierung und Lageroptimierung',
    link: {
        url: 'https://github.com/silo-app/SILO',
    }
}, {
    name: 'VentoyU',
    description: 'ventoyu ist ein Werkzeug, mit dem man Ventoy ISO Files auf einem USB-Stick verwalten kann',
    link: {
        url: 'https://github.com/mawigh/ventoyu'
    }
}, {
    name: 'Jupyter tools',
    description: 'Verschiendenste Tools f端r die Jupyter bzw. JupyterHub Welt wie Jupyter kernel mit Slurm HPC I/O',
    link: {
        url: 'https://github.com/search?q=org%3Apc2+jupyter&type=repositories'
    }
}];
---

<div>

    <h2 class="text-2xl font-bold text-white mb-4">Aktulle Projekte</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pb-4">

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {project.name}
                </h3>

                <p class="text-gray-400">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.name}
                            target='_blank'
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                                Open Project Website
                        </a>
                    : null
                }

            </div>

        )}

    </div>

    <h2 class="text-2xl font-bold text-white mb-4 pt-4">Webseiten</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {websites.map(website =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {website.name}
                </h3>

                <p class="text-gray-400">
                    {website.description}
                </p>

                {
                    website.link?.url ?
                        <a
                            href={website.link.url}
                            title={website.name}
                            target='_blank'
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">

                            Open Website
                        </a>
                    : null
                }

            </div>

        )}

    </div>

</div>
